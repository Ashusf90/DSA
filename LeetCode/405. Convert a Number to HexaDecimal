class Solution {
    public String toHex(int num) {
        if (num == 0) return "0";
        char[] map = "0123456789abcdef".toCharArray();
        StringBuilder sb = new StringBuilder();
        while (num != 0) {
            int digit = num & 0xF;      
            sb.append(map[digit]);
            num = num >>> 4;            
        }
        return sb.reverse().toString();
    }
}
