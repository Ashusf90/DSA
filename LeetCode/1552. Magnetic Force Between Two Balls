class Solution {
    public int maxDistance(int[] position, int m) {
        Arrays.sort(position);
        int res = 0;
        int low = 1;
        int high = position[position.length-1]-position[0];
        while(low<=high){
            int mid = low+(high-low)/2;
            if(check(position, m, mid)){
                res= mid;
                low = mid+1;
                
            }else{
                high = mid-1;
            }
        }
        return res;
    }
    static boolean check(int[] pos, int m, int dist){
        int count = 1;
        int prev = pos[0];
        for(int i = 1; i< pos.length;i++){
            if(pos[i]-prev>=dist){
                prev = pos[i];
                count++;
            }
        }
        return (count>=m);
    }
}
