class Solution {
    public int countElements(int[] nums, int k) {
        Arrays.sort(nums);
        int n = nums.length;
        if (k == 0) return n;          
        if (k >= n) return 0;          
        
        int threshold = nums[n - k];   
        int count = 0;
        
        for (int x : nums) {
            if (x < threshold) count++;
        }
        return count;
    }
}
