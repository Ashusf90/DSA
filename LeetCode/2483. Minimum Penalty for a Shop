class Solution {
    public int bestClosingTime(String customers) {
        int profit = 0;
        int maxProfit = 0;
        int ans = 0;

        for (int i = 0; i < customers.length(); i++) {
            if (customers.charAt(i)=='Y') {
                profit++;
            }else{
                profit--;
            }

            if(profit>maxProfit) {
                maxProfit=profit;
                ans=i+1; 
            }
        }
        return ans;
    }
}
