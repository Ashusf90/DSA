 *  *  *  *  * 
 *  *  *  * 
 *  *  * 
 *  * 
 * 

public class Main {
    public static void main(String[] args) {
        triange(5,0);

    }
    static void triange(int row, int column){
        if(row==0){
            return;
        }
        if(column<row){
            System.out.print(" * ");
            triange(row, column+1);
        } else{
            System.out.println();
            triange(row-1, 0);
        }
    }
}
