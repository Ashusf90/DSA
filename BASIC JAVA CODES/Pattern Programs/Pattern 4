* * * 
* * * * 
* * * * * 
* * * * 
* * * 
* * 
* 

public class Main {
    public static void main(String[] args) {
        pattern4(5);

    }
    static void pattern4(int n) {
        for (int row = 1; row <= 2*n ; row++) {
            int totalcolumnsinRow = row > n ? 2 * n - row : row;
            for (int col = 0; col < totalcolumnsinRow; col++) {
                System.out.print("* ");

            }
            System.out.println();

        }
    }
}
